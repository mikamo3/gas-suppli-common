{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "model/*": ["src/model/*"],
      "datastore/*": ["src/datastore/*"],
      "repository/*": ["src/repository/*"],
      "constant/*": ["src/constant/*"],
      "env/*": ["src/env/*"],
      "mocks/*": ["__mocks__/*"],
      "testhelper/*": ["__testhelper__/*"]
    },
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "outDir": "dist"
  }
}
